{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/Api/Instrument.Quote.Source.Api.WebApi/Instrument.Quote.Source.Api.WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Api/Instrument.Quote.Source.Api.WebApi/Instrument.Quote.Source.Api.WebApi.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Api/Instrument.Quote.Source.Api.WebApi/Instrument.Quote.Source.Api.WebApi.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build release",
      "type": "shell",
      "command": "dotnet build --configuration Release --no-restore",
    },
    {
      "label": "Test release",
      "type": "shell",
      "dependsOn": [
        "Build release"
      ],
      "command": "dotnet test ./Instrument.Quote.Source.Srv.sln --configuration Release --verbosity m --no-restore",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test with coverage",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=lcov",
        "/p:CoverletOutput=./lcov.info",
        "${workspaceFolder}/Instrument.Quote.Source.Srv.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    //{
    //  "label": "Build and Test release",
    //  "type": "shell",
    //  "dependsOn": [
    //    "Build release",
    //    "Test release"
    //  ],
    //  "group": {
    //    "kind": "test",
    //    "isDefault": true
    //  }
    //}
  ]
}